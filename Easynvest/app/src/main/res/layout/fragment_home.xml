<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="br.cericatto.easynvest.home.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="br.cericatto.easynvest.MainActivity">

        <!-- How Much To Apply -->

        <TextView
            android:id="@+id/how_much_to_apply__label"
            style="@style/Home_LabelTextView"
            android:text="Quanto você gostaria de aplicar? *"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/how_much_to_apply"
            style="@style/Home_EntryEditText"
            android:hint="R$"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/how_much_to_apply__label" />

        <View
            android:id="@+id/how_much_to_apply__separator"
            style="@style/Home_ViewSeparator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/how_much_to_apply" />

        <!-- Investment Maturity Date -->

        <TextView
            android:id="@+id/investment_maturity_date__label"
            style="@style/Home_LabelTextView"
            android:text="Qual a data de vencimento do investimento? *"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/how_much_to_apply" />

        <EditText
            android:id="@+id/investment_maturity_date__edit_text"
            style="@style/Home_EntryEditText"
            android:hint="dia/mês/ano"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/investment_maturity_date__label" />

        <View
            android:id="@+id/investment_maturity_date__separator"
            style="@style/Home_ViewSeparator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/investment_maturity_date__edit_text" />

        <!-- CDI -->

        <TextView
            android:id="@+id/cdi__label"
            style="@style/Home_LabelTextView"
            android:text="Qual o percentual do CDI do investimento? *"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/investment_maturity_date__separator" />

        <EditText
            android:id="@+id/cdi__edit_text"
            style="@style/Home_EntryEditText"
            android:hint="100%"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cdi__label" />

        <View
            android:id="@+id/cdi__separator"
            style="@style/Home_ViewSeparator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cdi__edit_text" />

        <!-- Button -->

        <Button
            android:id="@+id/simulate__button"
            style="@style/Style_Button"
            android:background="@drawable/border_round_ripple_grey__grey_background"
            android:text="Simular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cdi__separator" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>