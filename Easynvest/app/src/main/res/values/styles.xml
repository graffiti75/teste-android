<resources>
    <!--========================= APPLICATION =========================-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--<style name="AppTheme" parent="AppTheme.Base.AppCompat.Light.DarkActionBar">-->
        <!-- Your app branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Change the normal state of unchecked checkboxes, etc -->
        <item name="colorControlNormal">@color/colorPrimary</item>
        <!-- Overrides colorAccent on activated/checked UI controls -->
        <item name="colorControlActivated">@color/colorPrimary</item>
        <!-- Controls the ripple coloring -->
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <!--=============== TOOLBAR ===============-->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--=============== SCREENS ===============-->

    <!-- Home -->

    <style name="LabelTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">18sp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="EntryEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">44sp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="ViewSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@color/grey_400</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <!-- Result -->

    
</resources>